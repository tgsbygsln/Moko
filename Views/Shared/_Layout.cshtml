@using Microsoft.AspNetCore.Identity
@using AirFastNew.Models  <!-- Ensure correct namespace for ApplicationUser -->
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="article" />
    <meta property="og:title" content="5-5 Tugsbaysgalan" />
    <meta property="og:url" content="" />
    <meta property="og:site_name" content="5-5 Tugsbaysgalan" />
    <link rel="canonical" href="" />

    <link rel="shortcut icon" href="@Url.Content("~/Content/assets/logos/logo.png")" />

    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" />

    <!-- Vendor Stylesheets -->
    <link rel="stylesheet" href="@Url.Content("~/Content/assets/plugins/custom/fullcalendar/fullcalendar.bundle.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/assets/plugins/custom/datatables/datatables.bundle.css")" />

    <!-- Global Stylesheets -->
    <link rel="stylesheet" href="@Url.Content("~/Content/assets/plugins/global/plugins.bundle.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/assets/css/style.bundle.css")" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body id="kt_body" style="background-image: url('@Url.Content("~/Content/assets/media/patterns/header-bg.jpg")')">
   <div class="d-flex flex-column flex-root">
        <div class="page d-flex flex-row flex-column-fluid">
            <div class="wrapper d-flex flex-column flex-row-fluid" id="kt_wrapper">
                @await Html.PartialAsync("_Header") 

                <div id="kt_content_container" class="d-flex flex-column-fluid align-items-start container-xxl">
                    <div class="content flex-row-fluid" id="kt_content">
                        @RenderBody()
                    </div>
                </div>

                <div class="footer py-4 d-flex flex-lg-column" id="kt_footer">
                    <div class="container-xxl d-flex flex-column flex-md-row align-items-center justify-content-between">
                        <div class="text-dark order-2 order-md-1">
                            <span class="text-muted fw-bold me-1">
                                5-5 Б.Төгсбаясгалан | “Монгол Коосэн” Технологийн коллеж | 2025©
                            </span>
                            <br />
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- jQuery (Must be before validation scripts) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

    <!-- jQuery Validation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <!-- Bootstrap Bundle (JS + Popper.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Global Javascript Bundle -->
    <script src="@Url.Content("~/Content/assets/plugins/global/plugins.bundle.js")"></script>
    <script src="@Url.Content("~/Content/assets/js/scripts.bundle.js")"></script>

    <!-- Page Vendor Scripts -->
    <script src="@Url.Content("~/Content/assets/plugins/custom/fullcalendar/fullcalendar.bundle.js")"></script>
    <script src="@Url.Content("~/Content/assets/plugins/custom/datatables/datatables.bundle.js")"></script>

    <!-- Page Custom Scripts -->
    <script src="@Url.Content("~/Content/assets/js/widgets.bundle.js")"></script>
    <script src="@Url.Content("~/Content/assets/js/custom/widgets.js")"></script>
    <script src="@Url.Content("~/Content/assets/js/custom/apps/chat/chat.js")"></script>
    <script src="@Url.Content("~/Content/assets/js/custom/utilities/modals/upgrade-plan.js")"></script>
    <script src="@Url.Content("~/Content/assets/js/custom/utilities/modals/create-app.js")"></script>
    <script src="@Url.Content("~/Content/assets/js/custom/utilities/modals/create-campaign.js")"></script>
    <script src="@Url.Content("~/Content/assets/js/custom/utilities/modals/users-search.js")"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function toggleDarkMode() {
            document.body.classList.toggle("dark-mode");
            localStorage.setItem("theme", document.body.classList.contains("dark-mode") ? "dark" : "light");
        }

        document.addEventListener("DOMContentLoaded", function () {
            if (localStorage.getItem("theme") === "dark") {
                document.body.classList.add("dark-mode");
            }
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>