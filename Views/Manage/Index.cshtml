@model AirFastNew.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<main aria-labelledby="title" class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0">
                <!-- Adjusted spacing for the title -->
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-2"><i class="fas fa-user-cog"></i> Manage Your Account</h4>
                </div>
                <div class="card-body">
                    <p class="text-success text-center">@ViewBag.StatusMessage</p>

                    <ul class="list-group list-group-flush">
                        <!-- Password Section -->
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-lock me-2"></i> Password</span>
                            <span>
                                @if (Model.HasPassword)
                                {
                                    @Html.ActionLink("Change Password", "ChangePassword", null, new { @class = "btn btn-sm btn-outline-primary" })
                                }
                                else
                                {
                                    @Html.ActionLink("Create Password", "SetPassword", null, new { @class = "btn btn-sm btn-outline-success" })
                                }
                            </span>
                        </li>

                        <!-- External Logins -->
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-sign-in-alt me-2"></i> External Logins</span>
                            <span>
                                @Model.Logins.Count 
                                @Html.ActionLink("Manage", "ManageLogins", null, new { @class = "btn btn-sm btn-outline-secondary" })
                            </span>
                        </li>

                        <!-- Two-Factor Authentication -->
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <span><i class="fas fa-shield-alt me-2"></i> Two-Factor Authentication</span>
                                <span class="text-muted small">
                                    Not configured. <a href="https://go.microsoft.com/fwlink/?LinkId=403804" target="_blank">Learn more</a>
                                </span>
                            </div>
                        </li>
                    </ul>

                    <!-- Log Out Button -->
                    <div class="text-center mt-4">
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="fas fa-sign-out-alt"></i> Log Out
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>